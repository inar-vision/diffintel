{
  "name": "intent-spec-poc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "check": "node check-intent.js",
    "propose": "node check-intent.js --out .intent-report.json; node propose-fix.js .intent-report.json",
    "propose:apply": "node check-intent.js --out .intent-report.json; node propose-fix.js --apply .intent-report.json",
    "board": "node check-intent.js --out intent-report.json && npx serve ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "dotenv": "^17.2.4",
    "express": "^4.21.0"
  }
}
