{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "intent-schema-v0.2",
  "title": "Intent Specification",
  "description": "Schema for intent.json v0.2",
  "type": "object",
  "required": ["version", "features"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "enum": ["0.1", "0.2"]
    },
    "meta": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "additionalProperties": false
    },
    "features": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/feature"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "feature": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "approved", "deprecated"],
          "default": "approved"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "http-route" } }
          },
          "then": {
            "required": ["method", "path"],
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "description": { "type": "string" },
              "status": { "type": "string" },
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS", "HEAD"]
              },
              "path": {
                "type": "string",
                "pattern": "^/"
              },
              "response": {
                "type": "object",
                "properties": {
                  "status": { "type": "integer" },
                  "contentType": { "type": "string" }
                },
                "additionalProperties": false
              },
              "contract": {
                "type": "object",
                "properties": {
                  "auth": {
                    "type": "string",
                    "enum": ["required", "none"]
                  }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "middleware" } }
          },
          "then": {
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "description": { "type": "string" },
              "status": { "type": "string" },
              "pattern": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "constraint" } }
          },
          "then": {
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "description": { "type": "string" },
              "status": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      ]
    }
  }
}
